{
  "name": "vite-template-solid",
  "type": "module",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "prepare": "pnpm simple-git-hooks",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "solid-js": "^1.8.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.19.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^18.19.33",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.5",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.77.2",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.6.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-less": "^3.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-solid": "^2.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.html": [
      "stylelint --fix",
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  }
}
